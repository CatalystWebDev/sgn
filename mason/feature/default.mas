<%args>
    $feature
    $featurelocs
    $blast_url => undef
    $seq_download_url => undef
    $xrefs     => []
</%args>

<%once>
    use SGN::View::Feature qw/ type_name /;
</%once>

<& /page/page_title.mas, title => type_name($feature,'caps').' '. $feature->id &>

<& /util/import_javascript.mas,
    classes => [qw(Text.Markup CXGN.Effects CXGN.Phenome.Locus MochiKit.DOM)]
&>

<&| /page/info_section.mas,
    title       => type_name($feature,'caps').' details',
    subtitle    => $feature->is_obsolete ? 'WARNING: This gene has been replaced by new data.' : '',
    collapsible => 1,
&>
   <& /feature/feature_data.mas,
      feature     => $feature,
      featurelocs => $featurelocs,
    &>
    <& /feature/properties.mas,
       feature => $feature,
    &>
</&>

<&| /page/info_section.mas,
   title => 'Ontology terms',
   subtitle => 'ontology terms associated with this feature',
   collapsible => 1,
   hide_if_empty => 1,
&>

  <& /feature/feature_cvterms.mas,
      feature   => $feature,
  &>

</&>

<&| /page/info_section.mas,
   title => 'Related features',
   collapsible => 1,
   hide_if_empty => 1,
&>

  <& /feature/related_features.mas,
      feature   => $feature,
  &>

</&>

<&| /page/info_section.mas,
     title         => 'Sequence',
     collapsible   => 1,
     collapsed     => 0,
     hide_if_empty => 1,
 &>
    <& /feature/residues.mas,
            feature   => $feature,
            blast_url => $blast_url,
            seq_download_url => $seq_download_url
    &>
</&>

<&| /page/info_section.mas,
     title         => 'Region sequence(s)',
     subtitle      => "sequence underlying each location of this feature",
     collapsible   => 1,
     collapsed     => 0,
     hide_if_empty => 1,
 &>
    <& /feature/genomic_sequence.mas,
            feature   => $feature,
            blast_url => $blast_url,
    &>
</&>

<&| /page/info_section.mas,
     title => 'Related views',
     empty_message => 'None found',
     collapsible => 1,
     is_empty => ! scalar @$xrefs,
 &>
     <& /sitefeatures/mixed/xref_set/link.mas,
        xrefs => $xrefs,
      &>
</&>
